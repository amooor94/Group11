<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.amor.easydrive.DrivingUser"
    android:background="@drawable/message">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/backbtn"
        android:layout_alignParentBottom="true"
        android:background="@drawable/back1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/next1"
        android:id="@+id/nextbtn"
        android:layout_alignBottom="@+id/backbtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_marginTop="30dp"
        android:background="@drawable/edittextcorner"
        android:id="@+id/displaySpeed"
        android:text="Speed"
        android:textStyle="italic"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />


    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/speakbtn"
        android:background="@drawable/speak1"
        android:layout_above="@+id/backbtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Result"
        android:textSize="35dp"
        android:textStyle="italic"
        android:layout_alignBottom="@+id/Result"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/nextbtn"
        android:layout_alignEnd="@+id/nextbtn" />

</RelativeLayout>
